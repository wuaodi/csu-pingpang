/* 容器 */
.container {
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.refresh-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  padding: 12rpx 20rpx;
  color: white;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.refresh-btn:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.95);
}

.refresh-btn:disabled {
  opacity: 0.5;
}



/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
}

/* 主要内容 */
.content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 统计信息卡片 */
.stats-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 4rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.stats-divider {
  width: 1rpx;
  height: 40rpx;
  background: #e5e5e5;
  margin: 0 20rpx;
}

/* 区块 */
.section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.section-header {
  padding: 24rpx 24rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
}

/* 排行榜容器 */
.ranking-container {
  padding: 24rpx;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border-left: 6rpx solid #ddd;
  transition: all 0.3s ease;
}

.ranking-item.top-three {
  background: linear-gradient(135deg, #fff9e6 0%, #fff3cc 100%);
}

.ranking-item.top-three[data-rank="1"] {
  border-left-color: #ffd700;
  background: linear-gradient(135deg, #fff9e6 0%, #ffecb3 100%);
}

.ranking-item.top-three[data-rank="2"] {
  border-left-color: #c0c0c0;
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
}

.ranking-item.top-three[data-rank="3"] {
  border-left-color: #cd7f32;
  background: linear-gradient(135deg, #fdf5e6 0%, #f5deb3 100%);
}

.rank-badge {
  width: 56rpx;
  height: 56rpx;
  background: #007aff;
  color: white;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.rank-badge.rank-1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffb300 100%);
  color: #333;
}

.rank-badge.rank-2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #999999 100%);
  color: white;
}

.rank-badge.rank-3 {
  background: linear-gradient(135deg, #cd7f32 0%, #b8860b 100%);
  color: white;
}

.player-info {
  flex: 1;
  margin-right: 16rpx;
}

.player-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.player-stats {
  font-size: 24rpx;
  color: #666;
}

.win-rate {
  font-size: 32rpx;
  font-weight: 700;
  color: #007aff;
  min-width: 80rpx;
  text-align: right;
}

.ranking-item.top-three .win-rate {
  color: #ff6b35;
}

/* 比赛记录容器 */
.history-container {
  padding: 24rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.history-divider {
  text-align: center;
  padding: 20rpx 0;
  position: relative;
  margin: 8rpx 0;
}

.divider-text {
  background: #f8f9fa;
  color: #666;
  font-size: 22rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
}

.history-divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #e9ecef;
  z-index: 0;
}

.history-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border-left: 4rpx solid #28a745;
}

.match-players {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.match-players .player-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.match-players .player-name:first-child {
  text-align: left;
}

.match-players .player-name:last-child {
  text-align: right;
}

.match-score {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin: 0 20rpx;
}

.score {
  font-size: 32rpx;
  font-weight: 700;
  color: #007aff;
}

.vs {
  font-size: 28rpx;
  color: #666;
}

.match-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.match-result {
  font-size: 24rpx;
  color: #28a745;
  font-weight: 600;
}

.match-result.draw {
  color: #6c757d;
}

.match-time {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

/* 底部操作 */
.bottom-actions {
  padding: 20rpx 0 40rpx;
}

.export-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #007aff 0%, #5856d6 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(0,122,255,0.3);
  transition: all 0.3s ease;
}

.export-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0,122,255,0.3);
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 28rpx;
} 