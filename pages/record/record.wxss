.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 24rpx;
}

.opponent-section {
  margin-bottom: 40rpx;
}

.opponent-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.opponent-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 20rpx;
  flex: 1;
  min-width: 140rpx;
  text-align: center;
  transition: all 0.3s;
  border: 3rpx solid transparent;
}

.opponent-item.selected {
  background: white;
  border-color: #007AFF;
  transform: scale(1.05);
}

.opponent-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-bottom: 12rpx;
}

.opponent-name {
  display: block;
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.score-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.players {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
}

.player {
  text-align: center;
  flex: 1;
}

.player-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-bottom: 16rpx;
}

.player-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.vs-text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
  background: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 3rpx solid #FF6B6B;
}

.score-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.score-item {
  text-align: center;
  flex: 1;
}

.score-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.score-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.score-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #007AFF;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
}

.score-btn:active {
  transform: scale(0.9);
}

.score-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  min-width: 80rpx;
  text-align: center;
}

.score-divider {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF6B6B;
  margin: 0 20rpx;
}

.quick-scores {
  margin-bottom: 40rpx;
}

.quick-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.quick-btns {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: center;
}

.quick-btn {
  background: #f8f9fa;
  color: #333;
  border: 2rpx solid #dee2e6;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.quick-btn:active {
  background: #e9ecef;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
  color: white;
  border-radius: 20rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 25rpx rgba(0, 122, 255, 0.3);
}

.submit-btn:disabled {
  background: #ccc;
  box-shadow: none;
}

.submit-btn:active:not(:disabled) {
  transform: translateY(2rpx);
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
} 