.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background: #007AFF;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  border: none;
}

.player-list {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.player-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.player-item:last-child {
  border-bottom: none;
}

.player-info {
  flex: 1;
}

.player-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.player-stats {
  font-size: 26rpx;
  color: #666;
}

.delete-btn {
  background: #ff4444;
  color: white;
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  border-radius: 6rpx;
  border: none;
}

.empty-tip {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 12rpx;
  width: 80%;
  max-width: 500rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background: #f0f0f0;
  border: none;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 24rpx;
}

.name-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  font-size: 28rpx;
}

.cancel-btn {
  background: #f8f8f8;
  color: #666;
  border-radius: 0 0 0 12rpx;
}

.confirm-btn {
  background: #007AFF;
  color: white;
  border-radius: 0 0 12rpx 0;
} 