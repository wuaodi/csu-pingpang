.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #FFD93D 0%, #FF6B6B 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  padding: 8rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab.active {
  background: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tab text {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

.tab.active text {
  color: #333;
}

.ranking-list {
  margin-bottom: 40rpx;
}

.ranking-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.ranking-item.highlight {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  border: 3rpx solid #2196F3;
}

.rank-badge {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  font-weight: bold;
}

.rank-1 {
  background: linear-gradient(135deg, #FFD700 0%, #FFA000 100%);
  color: white;
}

.rank-2 {
  background: linear-gradient(135deg, #C0C0C0 0%, #9E9E9E 100%);
  color: white;
}

.rank-3 {
  background: linear-gradient(135deg, #CD7F32 0%, #8D6E63 100%);
  color: white;
}

.rank-badge:not(.rank-1):not(.rank-2):not(.rank-3) {
  background: #f0f0f0;
  color: #666;
}

.rank-number {
  font-size: 24rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-stats {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.win-rate {
  text-align: center;
}

.rate-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.rate-label {
  font-size: 20rpx;
  color: #666;
}

.history-list {
  margin-bottom: 40rpx;
}

.history-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.game-time {
  font-size: 24rpx;
  color: #666;
}

.game-result {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.game-result.win {
  background: #E8F5E8;
  color: #4CAF50;
}

.game-result.lose {
  background: #FFEBEE;
  color: #F44336;
}

.game-players {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.player {
  flex: 1;
  text-align: center;
}

.player-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-bottom: 12rpx;
}

.player-name {
  display: block;
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.player-score {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.vs-divider {
  margin: 0 20rpx;
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
}

.vs-divider text {
  font-size: 20rpx;
  color: #666;
  font-weight: bold;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.refresh-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
  transition: transform 0.2s;
}

.refresh-btn:active {
  transform: scale(0.98);
} 