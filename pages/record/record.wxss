.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 选手选择 */
.player-selection {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.player-select {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.picker {
  flex: 1;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.vs-text {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #007AFF;
  margin: 20rpx 0;
}

/* 比分区域 */
.score-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.player-score-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.player-score-item:last-of-type {
  border-bottom: none;
}

.player-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  min-width: 150rpx;
}

.score-input-large {
  flex: 1;
  height: 80rpx;
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  border: 3rpx solid #007AFF;
  border-radius: 12rpx;
  background: #f8f8f8;
  margin-left: 20rpx;
}

.score-input-large:focus {
  background: white;
  border-color: #0056CC;
}

.vs-separator {
  text-align: center;
  padding: 20rpx 0;
}

.vs-text-large {
  font-size: 36rpx;
  font-weight: bold;
  color: #007AFF;
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  padding: 12rpx 30rpx;
  border-radius: 20rpx;
  border: 2rpx solid #007AFF;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

.submit-btn:disabled {
  background: #ccc;
  color: #999;
}

/* 提示信息 */
.tip {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #666;
  font-size: 28rpx;
}

.no-players {
  text-align: center;
  padding: 80rpx 20rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.no-players text {
  display: block;
  margin-bottom: 16rpx;
  color: #666;
  font-size: 28rpx;
}

.go-players-btn {
  margin-top: 30rpx;
  background: #007AFF;
  color: white;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  border: none;
} 