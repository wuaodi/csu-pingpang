.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #FF9500 0%, #FF6B35 100%);
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.sync-indicator {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
}

.sync-status {
  font-size: 24rpx;
  color: white;
}

/* 统计信息 */
.stats {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.stats-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 排行榜区域 */
.ranking-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 6rpx solid #007AFF;
}

.ranking-item:first-child {
  border-left-color: #FFD700;
  background: linear-gradient(135deg, #FFF9E6 0%, #FFF3CC 100%);
}

.ranking-item:nth-child(2) {
  border-left-color: #C0C0C0;
  background: linear-gradient(135deg, #F5F5F5 0%, #EEEEEE 100%);
}

.ranking-item:nth-child(3) {
  border-left-color: #CD7F32;
  background: linear-gradient(135deg, #FDF5E6 0%, #F5DEB3 100%);
}

.rank-number {
  width: 60rpx;
  height: 60rpx;
  background: #007AFF;
  color: white;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.ranking-item:first-child .rank-number {
  background: #FFD700;
  color: #333;
}

.ranking-item:nth-child(2) .rank-number {
  background: #C0C0C0;
  color: #333;
}

.ranking-item:nth-child(3) .rank-number {
  background: #CD7F32;
  color: white;
}

.player-info {
  flex: 1;
  margin-right: 20rpx;
}

.player-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.player-stats {
  font-size: 24rpx;
  color: #666;
}

.win-rate {
  font-size: 36rpx;
  font-weight: bold;
  color: #007AFF;
  min-width: 80rpx;
  text-align: right;
}

.ranking-item:first-child .win-rate {
  color: #FF6B35;
}

/* 比赛记录分隔符 */
.history-separator {
  text-align: center;
  padding: 24rpx 0;
  margin: 20rpx 0;
  position: relative;
}

.separator-text {
  background: #f8f9fa;
  color: #6c757d;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #dee2e6;
  position: relative;
  z-index: 2;
}

.history-separator::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #dee2e6;
  z-index: 1;
}

/* 比赛记录区域 */
.history-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.history-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 4rpx solid #28a745;
}

.game-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.game-players {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.player1, .player2 {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.player1 {
  text-align: left;
}

.player2 {
  text-align: right;
}

.score {
  font-size: 32rpx;
  font-weight: bold;
  color: #007AFF;
  margin: 0 20rpx;
}

.game-result {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.winner {
  font-size: 24rpx;
  color: #28a745;
  font-weight: 500;
}

.draw {
  font-size: 24rpx;
  color: #6c757d;
  font-weight: 500;
}

.game-time {
  font-size: 22rpx;
  color: #999;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
}

.empty-tip text {
  display: block;
  margin-bottom: 8rpx;
  font-size: 28rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.refresh {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: white;
}

.action-btn.export {
  background: linear-gradient(135deg, #007bff 0%, #6610f2 100%);
  color: white;
} 