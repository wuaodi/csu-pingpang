<view class="container">
  <view class="header">
    <text class="title">🏆 排行榜</text>
    <!-- 云端同步状态指示器 -->
    <view class="sync-indicator">
      <text class="sync-status">● 已连接</text>
    </view>
  </view>

  <!-- 统计信息 -->
  <view class="stats">
    <text class="stats-text">{{totalPlayers}}位选手 • {{totalGames}}场比赛</text>
  </view>

  <!-- 胜率排行榜 -->
  <view class="ranking-section">
    <view class="section-title">🏅 胜率排行</view>
    <view class="ranking-list" wx:if="{{rankings.length > 0}}">
      <view class="ranking-item" wx:for="{{rankings}}" wx:key="id">
        <view class="rank-number">{{index + 1}}</view>
        <view class="player-info">
          <text class="player-name">{{item.name}}</text>
          <text class="player-stats">{{item.totalGames}}场 {{item.wins}}胜 {{item.losses}}负</text>
        </view>
        <view class="win-rate">{{item.winRate}}%</view>
      </view>
    </view>
    <view class="empty-tip" wx:else>
      <text>暂无排行数据</text>
      <text>记录比赛后将显示排行榜</text>
    </view>
  </view>

  <!-- 比赛记录 -->
  <view class="history-section">
    <view class="section-title">📋 比赛记录</view>
    <view class="history-list" wx:if="{{gameHistory.length > 0}}">
      <view wx:for="{{gameHistory}}" wx:key="id">
        <!-- 分隔符 -->
        <view class="history-separator" wx:if="{{item.isSeparator}}">
          <text class="separator-text">{{item.separatorText}}</text>
        </view>
        
        <!-- 比赛记录 -->
        <view class="history-item" wx:else>
          <view class="game-info">
            <view class="game-players">
              <text class="player1">{{item.player1.name}}</text>
              <text class="score">{{item.player1.score}}:{{item.player2.score}}</text>
              <text class="player2">{{item.player2.name}}</text>
            </view>
            <view class="game-result">
              <text class="winner" wx:if="{{!item.isDraw}}">{{item.winner}}获胜</text>
              <text class="draw" wx:else>平局</text>
              <text class="game-time">{{item.formattedTime}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="empty-tip" wx:else>
      <text>暂无比赛记录</text>
      <text>开始记录比赛吧！</text>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="action-buttons">
    <button class="action-btn refresh" bindtap="onRefresh">🔄 刷新</button>
    <button class="action-btn export" bindtap="exportData">📤 导出</button>
  </view>
</view> 