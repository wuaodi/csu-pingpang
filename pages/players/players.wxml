<view class="container">
  <!-- 页面头部 -->
  <view class="header">
    <text class="title">👥 选手管理</text>
    <button class="add-btn" bindtap="showAddModal" disabled="{{loading}}">
      <text class="add-text">新增</text>
    </button>
  </view>

  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading-spinner"></view>
    <text class="loading-text">正在加载...</text>
  </view>

  <!-- 选手列表 -->
  <view class="content" wx:if="{{!loading}}">
    <view class="players-section">
      <view class="players-list" wx:if="{{players.length > 0}}">
    <view class="player-item" wx:for="{{players}}" wx:key="id">
        <text class="player-name">{{item.name}}</text>
        <view class="player-actions">
          <button class="stats-btn" bindtap="showPlayerStats" data-id="{{item.id}}" disabled="{{loading}}">
            <text class="stats-text">交手记录</text>
          </button>
        </view>
      </view>
      </view>
      
      <view class="empty-state" wx:else>
        <text class="empty-icon">👥</text>
        <text class="empty-text">还没有选手</text>
        <text class="empty-hint">点击右上角"新增"添加选手</text>
      </view>
    </view>
    
    <!-- 底部刷新按钮 -->
    <view class="bottom-actions">
      <button class="refresh-action-btn" bindtap="onRefresh" disabled="{{loading}}">
        <text class="refresh-btn-text">刷新数据</text>
      </button>
    </view>
  </view>

  <!-- 添加选手弹窗 -->
  <view class="modal-overlay" wx:if="{{showModal}}" bindtap="hideAddModal">
    <view class="modal-container" catchtap="">
      <view class="modal-header">
        <text class="modal-title">添加新选手</text>
        <button class="modal-close" bindtap="hideAddModal">✕</button>
      </view>
      <view class="modal-body">
        <input class="input-field" 
               placeholder="请输入选手姓名" 
               bindinput="onPlayerNameInput" 
               value="{{newPlayerName}}" 
               focus="{{showModal}}"
               maxlength="10"
               confirm-type="done"
               bindconfirm="addPlayer" />
      </view>
      <view class="modal-footer">
        <button class="modal-btn cancel" bindtap="hideAddModal">取消</button>
        <button class="modal-btn confirm" bindtap="addPlayer" disabled="{{loading}}">确定</button>
      </view>
    </view>
  </view>

  <!-- 交手记录弹窗 -->
  <view class="modal-overlay stats-modal" wx:if="{{showStatsModal}}" bindtap="hideStatsModal">
    <view class="stats-modal-container" catchtap="">
      <view class="stats-modal-header">
        <text class="stats-modal-title">{{selectedPlayer.name}} 的交手记录</text>
        <button class="modal-close" bindtap="hideStatsModal">✕</button>
      </view>
      <view class="stats-modal-body">
        <view class="stats-table">
          <view class="stats-table-header">
            <view class="stats-header-cell opponent">对手</view>
            <view class="stats-header-cell">胜率</view>
            <view class="stats-header-cell">场次</view>
          </view>
          <view class="stats-table-body">
            <view class="stats-table-row" wx:for="{{headToHeadStats}}" wx:key="opponent">
              <view class="stats-cell opponent">{{item.opponent}}</view>
              <view class="stats-cell rate {{ item.total === 0 ? 'no-match' : (item.winRate >= 70 ? 'high' : (item.winRate >= 50 ? 'medium' : 'low')) }}">
                {{item.total === 0 ? '未交手' : item.winRate + '%'}}
              </view>
              <view class="stats-cell games">
                {{item.total === 0 ? '' : item.total + '场'}}
              </view>
            </view>
          </view>
        </view>
        <view class="stats-summary" wx:if="{{headToHeadStats.length > 0}}">
          <text class="summary-title">📊 统计说明</text>
          <view class="legend">
            <view class="legend-item">
              <view class="legend-color high"></view>
              <text class="legend-text">胜率≥70%</text>
            </view>
            <view class="legend-item">
              <view class="legend-color medium"></view>
              <text class="legend-text">胜率50-70%</text>
            </view>
            <view class="legend-item">
              <view class="legend-color low"></view>
              <text class="legend-text">胜率&lt;50%</text>
            </view>
            <view class="legend-item">
              <view class="legend-color no-match"></view>
              <text class="legend-text">未交手</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view> 